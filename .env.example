# Deployment Mode
# monolith: All services in one process with direct calls (fastest)
# microservices: Services run separately with HTTP communication
DEPLOYMENT_MODE=microservices

# Service Configuration
SERVICE_NAME=ticket-system
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
MONOLITH_PORT=8000
TICKET_PORT=8002
VACANCY_PORT=8001
RELOAD=true

# External Services (for ticket service)
VACANCY_URL=http://localhost:8001
VACANCY_TIMEOUT=2.0

# HTTP Client Performance
HTTP_MAX_CONNECTIONS=100
HTTP_KEEPALIVE_CONNECTIONS=20

# Stock Configuration
INITIAL_STOCK=1000
CACHE_TTL_SECONDS=1

# Logging
LOG_LEVEL=INFO
JSON_LOGS=false
