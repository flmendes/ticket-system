# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Configuration files
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 4

# Web files
[*.{html,css,scss,sass}]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Makefile (tabs required)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Go files (tabs required by gofmt)
[*.go]
indent_style = tab
indent_size = 4

# Python project specific overrides
[pyproject.toml]
indent_style = space
indent_size = 4

[requirements*.txt]
indent_style = space
indent_size = 4

# Environment files
[.env*]
indent_style = space
indent_size = 4

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Kubernetes manifests
[k8s/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Docker Compose
[docker-compose*.{yml,yaml}]
indent_style = space
indent_size = 2